<div class="container">
  <div class="row">
    <div class="col-md-8">
      <article class="article-card">
      <div class="mb-3">
        <span class="badge bg-secondary">{{article.category.name}}</span>
        <span class="text-muted small ms-2">
          <i class="far fa-calendar"></i> {{formatDate article.publishedAt}}
        </span>
        <span class="text-muted small ms-3">
          <i class="far fa-eye"></i> {{article.viewsCount}} просмотров
        </span>
      </div>

      <hr class="article-divider">

      <h2 class="mb-4">{{article.title}}</h2>

      {{#if article.image}}
      <div class="mb-4">
        <img src="{{article.image}}" alt="{{article.title}}" class="img-fluid rounded">
      </div>
      {{/if}}

      {{#if article.excerpt}}
      <div class="alert alert-light border mb-4">
        <p class="mb-0 lead">{{article.excerpt}}</p>
      </div>
      {{/if}}

      <div class="article-content" style="white-space: pre-wrap;">
        {{article.content}}
      </div>

      <hr class="my-5">

      {{#if relatedArticles}}
      <div class="mb-5">
        <h4 class="mb-3">
          <i class="fas fa-newspaper"></i> Похожие статьи
        </h4>
        <div class="row">
          {{#each relatedArticles}}
          <div class="col-md-4 mb-3">
            <div class="card task-card h-100">
              {{#if this.image}}
              <img src="{{this.image}}" class="card-img-top" alt="{{this.title}}" style="height: 150px; object-fit: cover;">
              {{/if}}
              <div class="card-body">
                <h6 class="card-title">{{this.title}}</h6>
                <a href="/articles/{{this.slug}}" class="btn btn-sm btn-outline-primary">
                  Читать <i class="fas fa-arrow-right"></i>
                </a>
              </div>
            </div>
          </div>
          {{/each}}
        </div>
      </div>
      {{/if}}
    </article>
  </div>

  <div class="col-md-4">
    <div class="card task-card">
      <div class="card-header bg-light">
        <h5 class="card-title mb-0">
          <i class="bi bi-list-ul me-2"></i>Категории статей
        </h5>
      </div>
      <div class="card-body">
        <ul class="list-group">
          {{#each categories}}
          <li class="list-group-item">
            <a href="/articles?category={{this.slug}}" class="text-decoration-none">
              {{this.name}}
            </a>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>
