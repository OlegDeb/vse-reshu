<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <div class="card task-card mb-4">
                <div class="card-header bg-light">
                    <h3 class="mb-0"><i class="bi bi-person-circle me-2"></i>Профиль пользователя</h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            {{#if user.firstName}}
                            <p><strong>Имя:</strong> {{user.firstName}}</p>
                            {{/if}}
                            {{#if user.lastName}}
                            <p><strong>Фамилия:</strong> {{user.lastName}}</p>
                            {{/if}}
                            <p><strong>Логин:</strong> {{user.username}}</p>
                            <p><strong>Email:</strong> {{user.email}}</p>
                        </div>
                        <div class="col-md-6">
                            {{#if user.phone}}
                            <p><strong>Телефон:</strong> {{user.phone}}</p>
                            {{/if}}

                            {{#if user.dateOfBirth}}
                            <p><strong>Возраст:</strong> {{calculateAge user.dateOfBirth}}</p>
                            {{/if}}

                            {{#if user.gender}}
                            <p><strong>Пол:</strong> {{user.gender}}</p>
                            {{/if}}

                            <p><strong>Дата регистрации:</strong><br>
                                <small class="text-muted">{{user.createdAtFormatted}}</small>
                            </p>

                            {{#if user.lastLogin}}
                            <p><strong>Последний вход:</strong><br>
                                <small class="text-muted">{{user.lastLogin}}</small>
                            </p>
                            {{/if}}

                            {{#if user.updatedAt}}
                            <p><strong>Последнее обновление:</strong><br>
                                <small class="text-muted">{{user.updatedAt}}</small>
                            </p>
                            {{/if}}
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card task-card">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-menu-button-wide me-2"></i>Действия</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="/tasks/my-tasks" class="btn btn-outline-primary">
                            <i class="bi bi-list-task me-1"></i>Мои задачи
                        </a>
                        <a href="/tasks/create" class="btn btn-primary">
                            <i class="bi bi-plus-circle me-1"></i>Создать задачу
                        </a>
                        <a href="/profile/edit" class="btn btn-outline-secondary">
                            <i class="bi bi-pencil me-1"></i>Редактировать профиль
                        </a>
                        <a href="/" class="btn btn-outline-secondary">
                            <i class="bi bi-house me-1"></i>На главную
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>