<div class="container">
    <div class="row">
        <!-- Основной контент с заданиями -->
        <div class="col-lg-9">
            {{#if tasks.length}}
                {{#each tasks}}
                <div class="card task-card">
                    <div class="card-body">
                        <!-- Заголовок, описание, цена и статус -->
                        <div class="mb-3">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h5 class="card-title mb-0" style="color: #1565c0;">{{title}}</h5>
                                {{#if price}}
                                <div class="task-price ms-3">{{price}} ₽</div>
                                {{/if}}
                            </div>
                            <p class="card-text task-description mb-2">{{description}}</p>
                            {{#if (eq status 'in_progress')}}
                                <span class="stats-badge">В работе</span>
                            {{else if (eq status 'closed')}}
                                <span class="badge bg-secondary">Закрыта</span>
                            {{/if}}
                        </div>
                        
                        <!-- Нижняя строка: пользователь, местоположение, категория, дата слева, кнопка справа -->
                        <div class="pt-3 border-top d-flex justify-content-between align-items-center flex-wrap gap-2">
                            <div class="d-flex align-items-center flex-wrap gap-3">
                                <!-- Пользователь -->
                                <a href="/users/{{author.username}}" target="_blank" class="text-decoration-none d-flex align-items-center">
                                    {{#if author.avatar}}
                                        <img src="{{author.avatar}}" alt="{{author.firstName}} {{author.lastName}}" 
                                             class="rounded-circle me-2" style="width: 32px; height: 32px; object-fit: cover;">
                                    {{else}}
                                        <div class="rounded-circle d-flex align-items-center justify-content-center me-2" 
                                             style="width: 32px; height: 32px; background-color: var(--youdo-light-blue);">
                                            <i class="bi bi-person-fill" style="font-size: 16px; color: var(--youdo-blue);"></i>
                                        </div>
                                    {{/if}}
                                    <strong class="text-dark" style="font-size: 0.9rem;">
                                        {{#if author.firstName}}
                                            {{author.firstName}}
                                            {{#if author.lastName}}{{author.lastName}}{{/if}}
                                        {{else}}
                                            {{author.username}}
                                        {{/if}}
                                    </strong>
                                </a>
                                <!-- Местоположение -->
                                <div class="task-location">
                                    <i class="bi bi-geo-alt me-1"></i>
                                    {{#if location}}{{location}}{{else}}Местоположение не указано{{/if}}
                                </div>
                                <!-- Категория -->
                                <span class="task-category">
                                    <i class="{{category.icon}} me-1"></i>{{category.name}}
                                </span>
                                <!-- Дата -->
                                <span class="task-date">{{createdAtFormatted}}</span>
                            </div>
                            <!-- Кнопка справа -->
                            <div class="d-flex gap-2">
                                {{#if (eq ../user._id author._id)}}
                                    {{#if (eq status 'open')}}
                                        <a href="/tasks/{{_id}}/edit" class="btn btn-outline-secondary btn-sm">Редактировать</a>
                                    {{/if}}
                                {{/if}}
                                <a href="/tasks/{{_id}}" class="btn btn-primary btn-sm">Просмотреть</a>
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}

            <!-- Пагинация -->
            <nav aria-label="Пагинация задач" class="mt-4">
                <ul class="pagination justify-content-center">
                    {{#if hasPrev}}
                        <li class="page-item">
                            <a class="page-link" href="{{#if currentCategory}}/tasks/category/{{currentCategory.slug}}{{else}}/tasks{{/if}}?page={{subtract currentPage 1}}">Назад</a>
                        </li>
                    {{else}}
                        <li class="page-item disabled">
                            <a class="page-link" href="#" tabindex="-1">Назад</a>
                        </li>
                    {{/if}}

                    {{#each pages}}
                        <li class="page-item {{#if (eq this ../currentPage)}}active{{/if}}">
                            <a class="page-link" href="{{#if ../currentCategory}}/tasks/category/{{../currentCategory.slug}}{{else}}/tasks{{/if}}?page={{this}}">{{this}}</a>
                        </li>
                    {{/each}}

                    {{#if hasNext}}
                        <li class="page-item">
                            <a class="page-link" href="{{#if currentCategory}}/tasks/category/{{currentCategory.slug}}{{else}}/tasks{{/if}}?page={{add currentPage 1}}">Вперед</a>
                        </li>
                    {{else}}
                        <li class="page-item disabled">
                            <a class="page-link" href="#" tabindex="-1">Вперед</a>
                        </li>
                    {{/if}}
                </ul>
            </nav>
            {{else}}
            <div class="text-center mt-5">
                <h3>Задач пока нет</h3>
                {{#if user}}
                    <p>Будьте первым, кто создаст задачу!</p>
                    <a href="/tasks/create" class="btn btn-primary">
                        <i class="bi bi-plus-circle me-1"></i>Создать задачу
                    </a>
                {{else}}
                    <p>Зарегистрируйтесь, чтобы создать задачу!</p>
                    <a href="/register" class="btn btn-primary">Регистрация</a>
                {{/if}}
            </div>
            {{/if}}
        </div>

        <!-- Сайдбар с категориями -->
        <div class="col-lg-3">
            {{#if user}}
            <div class="card task-card mb-4">
                <div class="card-body">
                    <a href="/tasks/create" class="btn btn-primary w-100">
                        <i class="bi bi-plus-circle me-1"></i>Разместить задание
                    </a>
                </div>
            </div>
            {{/if}}
            
            <div class="card task-card mb-4">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-funnel-fill me-2"></i>Категории
                    </h5>
                </div>
                <div class="card-body p-0">
                    <div class="accordion accordion-flush" id="categoriesAccordion">
                        {{#each (entries categoriesByType)}}
                        {{#with (lookup ../categoryTypes this.key)}}
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="heading{{@index}}">
                                <button class="accordion-button {{#unless @first}}collapsed{{/unless}}" type="button" 
                                        data-bs-toggle="collapse" data-bs-target="#collapse{{@index}}" 
                                        aria-expanded="{{#if @first}}true{{else}}false{{/if}}" 
                                        aria-controls="collapse{{@index}}">
                                    <i class="{{this}} me-2"></i>{{../this.key}}
                                </button>
                            </h2>
                            <div id="collapse{{@index}}" 
                                 class="accordion-collapse collapse {{#if @first}}show{{/if}}" 
                                 aria-labelledby="heading{{@index}}" 
                                 data-bs-parent="#categoriesAccordion">
                                <div class="accordion-body p-0">
                                    <ul class="list-group list-group-flush">
                                        {{#each ../this.value}}
                                        <li class="list-group-item">
                                            <a href="/tasks/category/{{this.slug}}" 
                                               class="text-decoration-none {{#if (eq ../../../../currentCategory._id this._id)}}fw-bold text-primary{{/if}}">
                                                <i class="{{this.icon}} me-2"></i>{{this.name}}
                                            </a>
                                        </li>
                                        {{/each}}
                                    </ul>
                                </div>
                            </div>
                        </div>
                        {{/with}}
                        {{/each}}
                    </div>
                </div>
            </div>

            <div class="card task-card">
                <div class="card-body">
                    <h5 class="card-title">Станьте исполнителем</h5>
                    <p class="card-text">Начните зарабатывать, выполняя задания</p>
                    {{#if user}}
                        <a href="/tasks" class="btn btn-outline-primary">Найти задания</a>
                    {{else}}
                        <a href="/register" class="btn btn-outline-primary">Зарегистрироваться</a>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</div>