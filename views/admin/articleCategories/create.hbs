<div class="container mt-4">
  <div class="admin-wrapper">
    <!-- Меню админки -->
    <div class="admin-sidebar mb-4">
      <nav class="admin-nav-menu">
        <a href="/admin/articles" class="admin-nav-item {{#if (eq currentPath '/admin/articles')}}active{{/if}}">
          <i class="bi bi-file-text me-2"></i>
          <span>Статьи</span>
        </a>
        <a href="/admin/pages" class="admin-nav-item {{#if (eq currentPath '/admin/pages')}}active{{/if}}">
          <i class="bi bi-file-earmark-text me-2"></i>
          <span>Страницы</span>
        </a>
        <a href="/admin/categories" class="admin-nav-item {{#if (eq currentPath '/admin/categories')}}active{{/if}}">
          <i class="bi bi-tags me-2"></i>
          <span>Категории задач</span>
        </a>
        <a href="/admin/article-categories" class="admin-nav-item {{#if (eq currentPath '/admin/article-categories')}}active{{/if}}">
          <i class="bi bi-collection me-2"></i>
          <span>Категории статей</span>
        </a>
      </nav>
    </div>

    <!-- Основной контент -->
    <div class="admin-content">
      <h2 class="mb-4">Создать категорию статей</h2>

      {{#if error}}
      <div class="alert alert-danger">{{error}}</div>
      {{/if}}

      <form action="/admin/article-categories/create" method="POST">
  <div class="mb-3">
    <label for="name" class="form-label">Название *</label>
    <input type="text" class="form-control" id="name" name="name" required value="{{formData.name}}">
    <small class="form-text text-muted">Slug будет сгенерирован автоматически</small>
  </div>
  <div class="mb-3">
    <label for="description" class="form-label">Описание</label>
    <textarea class="form-control" id="description" name="description" rows="3">{{formData.description}}</textarea>
    <small class="form-text text-muted">Опционально, максимум 500 символов</small>
  </div>
  <button type="submit" class="btn btn-create-category">
    <i class="fas fa-save"></i> Создать
  </button>
  <a href="/admin/article-categories" class="btn btn-secondary">
    <i class="fas fa-times"></i> Отмена
  </a>
</form>
    </div>
  </div>
</div>
