<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h2 class="mb-0">Модерация задач</h2>
    <p class="text-muted mb-0">Проверка и одобрение публикации задач</p>
  </div>
</div>

<!-- Фильтры -->
<div class="card mb-4">
  <div class="card-body">
    <form method="GET" action="/admin/tasks" class="row g-3">
      <div class="col-md-4">
        <label for="moderationStatus" class="form-label">Статус модерации</label>
        <select class="form-select" id="moderationStatus" name="moderationStatus">
          <option value="">Все статусы</option>
          <option value="pending" {{#if (eq currentModerationStatus "pending")}}selected{{/if}}>На модерации</option>
          <option value="approved" {{#if (eq currentModerationStatus "approved")}}selected{{/if}}>Одобрено</option>
          <option value="rejected" {{#if (eq currentModerationStatus "rejected")}}selected{{/if}}>Отклонено</option>
        </select>
      </div>
      <div class="col-md-4">
        <label for="status" class="form-label">Статус задачи</label>
        <select class="form-select" id="status" name="status">
          <option value="">Все статусы</option>
          <option value="open" {{#if (eq currentStatus "open")}}selected{{/if}}>Открыта</option>
          <option value="in_progress" {{#if (eq currentStatus "in_progress")}}selected{{/if}}>В работе</option>
          <option value="closed" {{#if (eq currentStatus "closed")}}selected{{/if}}>Закрыта</option>
        </select>
      </div>
      <div class="col-md-4 d-flex align-items-end">
        <button type="submit" class="btn btn-primary me-2">
          <i class="fas fa-filter"></i> Применить
        </button>
        <a href="/admin/tasks" class="btn btn-outline-secondary">
          <i class="fas fa-times"></i> Сбросить
        </a>
      </div>
    </form>
  </div>
</div>

{{#if tasks}}
<div class="table-responsive">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Название</th>
        <th>Автор</th>
        <th>Категория</th>
        <th>Город</th>
        <th>Статус задачи</th>
        <th>Статус модерации</th>
        <th>Дата создания</th>
        <th>Действия</th>
      </tr>
    </thead>
    <tbody>
      {{#each tasks}}
      <tr>
        <td><strong>{{this.title}}</strong></td>
        <td>
          {{#if this.author.avatar}}
            <img src="{{this.author.avatar}}" alt="{{this.author.username}}" class="rounded-circle me-2" style="width: 32px; height: 32px; object-fit: cover;">
          {{else}}
            <i class="bi bi-person-circle me-2"></i>
          {{/if}}
          {{#if this.author.firstName}}{{this.author.firstName}} {{this.author.lastName}}{{else}}{{this.author.username}}{{/if}}
        </td>
        <td>
          <span class="badge bg-secondary">{{this.category.name}}</span>
        </td>
        <td>
          {{#if this.city}}
            {{this.city.name}}{{#if this.city.region}}, {{this.city.region}}{{/if}}
          {{else}}
            <span class="text-muted">Удаленно</span>
          {{/if}}
        </td>
        <td>
          {{#if (eq this.status "open")}}
          <span class="badge bg-success">Открыта</span>
          {{else if (eq this.status "in_progress")}}
          <span class="badge bg-warning">В работе</span>
          {{else}}
          <span class="badge bg-secondary">Закрыта</span>
          {{/if}}
        </td>
        <td>
          {{#if (eq this.moderationStatus "pending")}}
          <span class="badge bg-warning">На модерации</span>
          {{else if (eq this.moderationStatus "approved")}}
          <span class="badge bg-success">Одобрено</span>
          {{else}}
          <span class="badge bg-danger">Отклонено</span>
          {{/if}}
        </td>
        <td><small>{{formatDate this.createdAt}}</small></td>
        <td>
          <div class="d-flex gap-2" role="group">
            <a href="/admin/tasks/{{this._id}}" class="btn btn-outline-primary btn-sm" title="Просмотр">
              <i class="fas fa-eye"></i>
            </a>
          </div>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>

<!-- Пагинация -->
{{#if (gt totalPages 1)}}
<nav aria-label="Навигация по страницам">
  <ul class="pagination justify-content-center">
    {{#if hasPrevPage}}
    <li class="page-item">
      <a class="page-link" href="/admin/tasks?page={{prevPage}}{{#if currentModerationStatus}}&moderationStatus={{currentModerationStatus}}{{/if}}{{#if currentStatus}}&status={{currentStatus}}{{/if}}">Предыдущая</a>
    </li>
    {{else}}
    <li class="page-item disabled">
      <span class="page-link">Предыдущая</span>
    </li>
    {{/if}}
    
    {{#each pages}}
    <li class="page-item {{#if (eq this ../currentPage)}}active{{/if}}">
      <a class="page-link" href="/admin/tasks?page={{this}}{{#if ../currentModerationStatus}}&moderationStatus={{../currentModerationStatus}}{{/if}}{{#if ../currentStatus}}&status={{../currentStatus}}{{/if}}">{{this}}</a>
    </li>
    {{/each}}
    
    {{#if hasNextPage}}
    <li class="page-item">
      <a class="page-link" href="/admin/tasks?page={{nextPage}}{{#if currentModerationStatus}}&moderationStatus={{currentModerationStatus}}{{/if}}{{#if currentStatus}}&status={{currentStatus}}{{/if}}">Следующая</a>
    </li>
    {{else}}
    <li class="page-item disabled">
      <span class="page-link">Следующая</span>
    </li>
    {{/if}}
  </ul>
</nav>
{{/if}}

{{else}}
<div class="alert alert-info text-center">
  <i class="fas fa-info-circle fa-2x mb-3"></i>
  <h5>Нет задач</h5>
  <p class="mb-0">Задач не найдено</p>
</div>
{{/if}}
